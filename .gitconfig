[user]
    email = m@omuomugin.com
    name = omuomugin

[color]
    status      = auto
    diff        = auto
    branch      = auto
    interactive = auto
    grep        = auto
    ui          = auto

[column]
    ui = auto

[commit]
	template = ~/.gitmessage

[branch]
    sort = -committerdate

[diff]
    algorithm = histogram

[log]
    abbrevCommit = true

[push]
    autoSetupRemote = true

[pull]
    ff = only

[fetch]
    prune = true

[github]
	user = omuomugin

[ghq]
    root = ~/workspace
